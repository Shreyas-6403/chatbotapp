<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <View
        android:id="@+id/topView"
        android:layout_width="409dp"
        android:layout_height="117dp"

        android:background="@drawable/wave"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uplode data"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.657"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageView
        android:layout_width="76dp"
        android:layout_height="108dp"
        android:layout_marginStart="48dp"
        android:src="@drawable/uplode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="618dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/signup"
        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763">


        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/modela"
            android:layout_width="309dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/mobile"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Model name"
                android:inputType="text"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pricea"
            android:layout_width="309dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/dolerr"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Price"
                android:inputType="text"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/spec"
            android:layout_width="309dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/spec"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Specification"
                android:inputType="text"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/imgurl"
            android:layout_width="309dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/imgurl"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Image URL Here"
                android:inputType="textEmailAddress"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>





        <Button

            android:id="@+id/uplodeimg"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:text="Uplode data"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/geturl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="Get Firebase Link "
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button

            android:id="@+id/back"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:text="Back"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"

            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>